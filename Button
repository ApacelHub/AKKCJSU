local button = script.Parent.Parent -- Assuming the TextButton is inside a Frame
local frame = button.Parent -- Assuming the Frame is a child of another Frame or ScreenGui

-- Function to simulate pressing the right shift key
local function pressRightShift()
    -- Create a RemoteEvent to communicate with a Script in the Workspace
    local remoteEvent = Instance.new("RemoteEvent")
    remoteEvent.Name = "PressRightShiftEvent"
    remoteEvent.Parent = game.Workspace

    -- Fire the RemoteEvent to trigger the Script in Workspace
    remoteEvent:FireServer()
end

-- Connect the function to the button's Click event
button.MouseButton1Click:Connect(pressRightShift)
